<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSplash">

    <com.airbnb.lottie.LottieAnimationView
        android:id="@+id/anim_splash"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_app_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/tv_create_by"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:text="@string/wanAndroid"
        android:textColor="@color/colorDark"
        android:textSize="@dimen/sp_20" />

    <TextView
        android:id="@+id/tv_create_by"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/anim_splash"
        android:layout_alignEnd="@id/tv_app_name"
        android:layout_marginBottom="@dimen/dp_20"
        android:layout_marginEnd="@dimen/dp_10"
        android:text="@string/create_by_zc"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="@dimen/sp_10" />
</RelativeLayout>